/* pages/profile/index.wxss */
@import "../../styles/iconfont.wxss";

.container {
  min-height: 100vh;
  background: #f5f6fa;
}

/* 用户信息区域 */
.user-info {
  background: linear-gradient(135deg, #6c5ce7, #a393eb);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.id {
  font-size: 24rpx;
  opacity: 0.8;
}

.logout-btn {
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 统计数据 */
.stats {
  margin: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item .number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 菜单列表 */
.menu-list {
  margin: 30rpx;
  background: #fff;
  border-radius: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item .iconfont {
  font-size: 40rpx;
  color: #6c5ce7;
  margin-right: 20rpx;
}

.menu-item text {
  font-size: 30rpx;
  color: #333;
}

.menu-item .desc {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 未登录状态的样式优化 */
.login-wrapper {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.login-info {
  flex: 1;
}

.login-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.login-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-btn {
  margin: 0;
  padding: 0 30rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #6c5ce7;
  background: #fff;
  border-radius: 28rpx;
  font-weight: normal;
  width: fit-content;
}

.login-btn::after {
  border: none;
}