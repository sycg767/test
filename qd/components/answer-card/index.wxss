.answer-card {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.question-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.question-item {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f6fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.question-item.active {
  background: #6c5ce7;
  color: #fff;
}

.question-item.correct {
  background: #00c853;
  color: #fff;
}

.question-item.wrong {
  background: #ff5252;
  color: #fff;
}

.legend {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  background: #f5f6fa;
}

.dot.active {
  background: #6c5ce7;
}

.dot.correct {
  background: #00c853;
}

.dot.wrong {
  background: #ff5252;
} 