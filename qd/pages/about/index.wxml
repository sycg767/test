    <image src="/assets/images/logo.png" mode="aspectFit"></image>
  </view>
  
  <view class="app-info">
    <text class="app-name">刷题助手</text>
    <text class="version">Version {{version}}</text>
  </view>
  
  <view class="content">
    <view class="section">
