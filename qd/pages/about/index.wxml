    </view>
    
    <view class="section">
      <view class="title">联系我们</view>
      <view class="contact-item">
        <text class="label">邮箱：</text>
        <text class="value">support@example.com</text>
      </view>
      <view class="contact-item">
        <text class="label">微信：</text>
        <text class="value">question_helper</text>
      </view>
    </view>
  </view>
</view>
