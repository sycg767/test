/* pages/profile/password.wxss */
.container {
  min-height: 100vh;
  background: #f5f6fa;
  padding: 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

.form {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.input-group {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.input-group:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.password-input {
  display: flex;
  align-items: center;
}

.password-input input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.password-input .iconfont {
  padding: 20rpx;
  color: #999;
  font-size: 40rpx;
}

.btn-wrapper {
  padding: 0 30rpx;
  margin: 40rpx 0;
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #6c5ce7;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(108, 92, 231, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.confirm-btn::after {
  border: none;
}

.confirm-btn[loading] {
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tips {
  padding: 0 30rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.tip-item:last-child {
  margin-bottom: 0;
}