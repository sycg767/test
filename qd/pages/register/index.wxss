@import "../login/index.wxss";

.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  margin: 60rpx 0;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
}

.welcome {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.welcome .subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.form {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

input {
  width: 100%;
  height: 88rpx;
  background: #f5f6fa;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 44rpx;
  margin-top: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.login-link {
  text-align: center;
  font-size: 28rpx;
  color: #1989fa;
  margin-top: 30rpx;
}

.error-message {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 密码输入框样式 */
.password-input {
  position: relative;
  width: 100%;
}

.password-input input {
  padding-right: 80rpx;
}

.password-input .iconfont {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #333;
  z-index: 1;
  padding: 10rpx;
}

.password-input .iconfont:active {
  opacity: 0.7;
} 