@import "../../styles/iconfont.wxss";

.container {
  padding: 0 0 30rpx;
  background: #fff;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 搜索框样式 */
.search-box {
  margin: 0 30rpx 30rpx;
}

.search-input {
  background: #f8f9fa;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.search-input .iconfont {
  font-size: 32rpx;
  color: #8a8a8a;
  margin-right: 10rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #a0a0a0;
}

/* 快速功能入口 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.action-icon:active {
  transform: scale(0.95);
}

.action-icon .iconfont {
  font-size: 56rpx;
  color: #6c5ce7;
}

.action-text {
  font-size: 26rpx;
  color: #4a4a4a;
}

/* 题库区域 */
.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 24rpx;
  color: #666;
} 