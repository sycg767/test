@import "../../styles/iconfont.wxss";

.container {
  padding: 0 0 30rpx;
  background: #f5f6fa;
}

/* 顶部区域 */
.header {
  background: linear-gradient(135deg, #6c5ce7, #a393eb);
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(108, 92, 231, 0.15);
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 搜索框样式 */
.search-box {
  margin-bottom: 20rpx;
}

.search-input {
  background: rgba(255, 255, 255, 0.9);
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-input .iconfont {
  font-size: 36rpx;
  color: #6c5ce7;
  margin-right: 12rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 选择题库按钮样式 */
.bank-select {
  margin: 20rpx 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.current-bank {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.current-bank .iconfont {
  font-size: 36rpx;
  color: #6c5ce7;
}

.bank-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.bank-select .icon-youjiantou {
  font-size: 24rpx;
  color: #999;
}

/* 学习数据统计 */
.study-stats {
  margin-top: 20rpx;
  padding: 10rpx 0;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-between;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stat-item:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  bottom: 20%;
  width: 2rpx;
  background: rgba(255, 255, 255, 0.2);
}

.stat-item .num {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 快速功能入口 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  background: #f0effe;
  transition: all 0.3s ease;
}

.action-icon:active {
  transform: scale(0.95);
  background: #e3e0ff;
}

.action-icon .iconfont {
  font-size: 48rpx;
  color: #6c5ce7;
}

.action-text {
  font-size: 26rpx;
  color: #333;
}

/* 通用区块样式 */
.section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
}

.section-header .more {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.more .iconfont {
  font-size: 24rpx;
  margin-left: 4rpx;
}

/* 学习计划 */
.plan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-item {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
}

.plan-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.plan-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.plan-progress {
  font-size: 24rpx;
  color: #666;
}

/* 推荐题库 */
.bank-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bank-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.bank-item:active {
  transform: scale(0.98);
}

.bank-image {
  width: 200rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin: 20rpx;
}

.bank-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bank-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.bank-stats {
  display: flex;
  gap: 20rpx;
}

.bank-stats text {
  font-size: 24rpx;
  color: #666;
}

/* 知识点导航 */
.knowledge-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.knowledge-item {
  background: #f8f9fa;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.knowledge-name {
  font-size: 26rpx;
  color: #333;
}

.knowledge-count {
  font-size: 24rpx;
  color: #666;
}

/* 排行榜 */
.rank-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.rank-num {
  width: 40rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-right: 20rpx;
}

.rank-num.top {
  color: #ff4d4f;
  font-weight: bold;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0effe;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.user-avatar .iconfont {
  font-size: 40rpx;
  color: #6c5ce7;
}

.user-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.study-time {
  font-size: 24rpx;
  color: #666;
}

/* 题库图标样式 */
.bank-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  background: #f0effe;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bank-icon .iconfont {
  font-size: 60rpx;
  color: #6c5ce7;
}

/* 开始刷题按钮 */
.start-practice {
  padding: 30rpx 40rpx;
}

.start-btn {
  height: 88rpx;
  background: linear-gradient(135deg, #6c5ce7, #8066eb);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(108, 92, 231, 0.3);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(108, 92, 231, 0.2);
}

.start-btn .iconfont {
  font-size: 36rpx;
  margin-right: 12rpx;
} 