<view class="container">
  <view class="result-card">
    <view class="title">练习完成</view>
    
    <view class="stats">
      <view class="stat-item">
        <text class="label">正确率</text>
        <text class="value">{{correctRate}}</text>
      </view>
      <view class="stat-item">
        <text class="label">用时</text>
        <text class="value">{{duration}}分钟</text>
      </view>
    </view>

    <view class="analysis">
      <view class="analysis-item">
        <text class="label">总题数</text>
        <text class="value">{{totalQuestions}}</text>
      </view>
      <view class="analysis-item">
        <text class="label">答对题数</text>
        <text class="value correct">{{correctCount}}</text>
      </view>
      <view class="analysis-item">
        <text class="label">答错题数</text>
        <text class="value wrong">{{totalQuestions - correctCount}}</text>
      </view>
    </view>
  </view>

  <view class="action-buttons">
    <button class="btn wrong-btn" bindtap="viewWrongQuestions" 
            wx:if="{{totalQuestions - correctCount > 0}}">
      查看错题
    </button>
    <button class="btn again-btn" bindtap="practiceAgain">再练一次</button>
    <button class="btn return-btn" bindtap="returnToBank">返回题库</button>
  </view>
</view> 