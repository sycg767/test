.container {
  padding: 40rpx;
}

.result-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.stat-item .value {
  font-size: 48rpx;
  color: #6c5ce7;
  font-weight: bold;
}

.analysis {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.analysis-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.analysis-item .label {
  font-size: 28rpx;
  color: #666;
}

.analysis-item .value {
  font-size: 28rpx;
  font-weight: bold;
}

.value.correct {
  color: #00c853;
}

.value.wrong {
  color: #ff5252;
}

.action-buttons {
  margin-top: 60rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}

.wrong-btn {
  background: #ff5252;
  color: #fff;
}

.again-btn {
  background: #6c5ce7;
  color: #fff;
}

.return-btn {
  background: #f5f6fa;
  color: #666;
} 