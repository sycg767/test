.container {
  padding: 30rpx;
}

.score-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.score-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.score-content {
  display: flex;
  justify-content: space-around;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.score-item .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1989fa;
}

.analysis-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.analysis-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.analysis-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fc;
  border-radius: 8rpx;
}

.analysis-item .count {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.analysis-item .count.correct {
  color: #07c160;
}

.analysis-item .count.wrong {
  color: #ee0a24;
}

.analysis-item .label {
  font-size: 24rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 30rpx;
}

.btn {
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.btn.review {
  background: #1989fa;
  color: #fff;
}

.btn.restart {
  background: #fff;
  color: #1989fa;
  border: 2rpx solid #1989fa;
}

.btn.back {
  background: #f5f5f5;
  color: #666;
} 