/* pages/practice-records/index.wxss */
.container {
  padding: 30rpx;
  background: #f5f6fa;
  min-height: 100vh;
}

/* 统计信息样式 */
.statistics {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  text-align: center;
}

.number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
}

/* 记录列表样式 */
.records-list {
  margin-bottom: 30rpx;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.question-type {
  display: inline-block;
  font-size: 24rpx;
  color: #6c5ce7;
  background: rgba(108, 92, 231, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.practice-time {
  font-size: 24rpx;
  color: #999;
}

.question-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.answer-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.answer-info .label {
  color: #666;
  margin-right: 8rpx;
}

.answer {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.answer.correct {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.answer.wrong {
  color: #f5222d;
  background: rgba(245, 34, 45, 0.1);
}

.status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status.correct {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.status.wrong {
  color: #f5222d;
  background: rgba(245, 34, 45, 0.1);
}

/* 加载状态样式 */
.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
} 